<div class="container">
  <div class = "top-container relative h-screen w-screen grid justify-items-center">
      <% if @patients_matched %>
        <% @patients_matched.each do |patient| %>
          <div class="card bg-blue-100 mb-2.5 rounded-md">
            <%# <%= link_to patient.name.join,  %>
            <div class="patient-info text-left font-poppins text-blue-600 px-10"><p>Name: </p>
              <%= link_to patient.name, edit_patient_path(patient) %>
            </div>
            <br>
            <div class="patient-info text-left font-poppins text-blue-600 px-10"><p>Location: </p><%= link_to patient.location, edit_patient_path(patient) %>
            </div>
            <br>
            <div class="patient-info text-left font-poppins text-blue-600 px-10"><p>Details: </p><%= link_to patient.details, edit_patient_path(patient) %>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
